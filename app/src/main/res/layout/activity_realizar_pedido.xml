<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/naranja_claro"
    tools:context=".Realizar_pedido">

    <!-- Logo Header -->

    <!-- Título: Realizar Pedido -->

    <!-- Línea decorativa -->
    <ImageView
        android:id="@+id/logoHeader"
        android:layout_width="304dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Logo de Pizzetos"
        android:scaleType="fitCenter"
        android:src="@drawable/logopizzetos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Realizar Pedido"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoHeader" />

    <View
        android:id="@+id/decorative_line"
        android:layout_width="64dp"
        android:layout_height="2dp"
        android:background="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Inicio"
        android:layout_marginTop="8dp" />

    <!-- Imagen Nota -->

    <!-- Campo Nombre -->

    <ImageView
        android:id="@+id/pedido"
        android:layout_width="321dp"
        android:layout_height="125dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/nota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decorative_line" />

    <EditText
        android:id="@+id/nombrePersona"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Persona"
        android:textColor="#FFFFFF"
        android:hintTextColor="#FFFFFF"
        android:background="@drawable/input_border"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/pedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo Teléfono -->
    <EditText
        android:id="@+id/telefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Teléfono"
        android:inputType="phone"
        android:textColor="#FFFFFF"
        android:hintTextColor="#D3D3D3"
        android:background="@drawable/input_border"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/nombrePersona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo Ingrediente de Pizza -->
    <Spinner
        android:id="@+id/ingredientePizza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/ingredientes_array"
        android:background="@drawable/input_border"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/telefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Campo Tamaño de la Pizza -->
    <Spinner
        android:id="@+id/tamanoPizza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/tamanos_array"
        android:background="@drawable/input_border"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ingredientePizza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Campo Dirección -->
    <EditText
        android:id="@+id/direccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dirección del Domicilio"
        android:textColor="#FFFFFF"
        android:hintTextColor="#D3D3D3"
        android:background="@drawable/input_border"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tamanoPizza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Campo Forma de Pago -->
    <RadioGroup
        android:id="@+id/formaPago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/direccion"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/efectivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Efectivo"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/tarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjeta"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <!-- Botón Enviar -->
    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        android:text="Enviar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formaPago" />

</androidx.constraintlayout.widget.ConstraintLayout>
